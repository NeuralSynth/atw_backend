# ============================================
# ATW Backend Environment Configuration
# ============================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control

# Django Core Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-use-strong-random-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://neuralsynth:password@localhost:5432/atw_db

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/atw/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/atw/media/

# Security Settings (Production)
# Uncomment and configure for production deployment
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=django_server.log
